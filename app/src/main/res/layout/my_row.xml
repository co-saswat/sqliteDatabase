<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/main_layout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/std_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Students Name :"
                android:textSize="14sp"
                android:textColor="#000"
                app:layout_constraintStart_toEndOf="@+id/std_id"
                app:layout_constraintTop_toTopOf="@+id/std_id" />

            <TextView
                android:id="@+id/tv_guardian_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Students Guardian Name :"
                android:textSize="14sp"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="@+id/tv_name_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_title" />

            <TextView
                android:id="@+id/tv_email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Student Email :"
                android:textSize="14sp"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="@+id/tv_guardian_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_guardian_name" />

            <TextView
                android:id="@+id/tv_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:textColor="#000"
                app:layout_constraintStart_toEndOf="@+id/tv_name_title"
                app:layout_constraintTop_toTopOf="@+id/tv_name_title" />

            <TextView
                android:id="@+id/tv_guardian_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:textColor="#000"
                app:layout_constraintStart_toEndOf="@+id/tv_guardian_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_value" />

            <TextView
                android:id="@+id/tv_email_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:textColor="#000"
                app:layout_constraintStart_toEndOf="@+id/tv_email_address"
                app:layout_constraintTop_toBottomOf="@+id/tv_guardian_name_value" />

            <TextView
                android:id="@+id/tv_phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Student Phone no :"
                android:textSize="14sp"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="@+id/tv_email_address"
                app:layout_constraintTop_toBottomOf="@+id/tv_email_address" />

            <TextView
                android:id="@+id/tv_phone_no_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:textColor="#000"
                app:layout_constraintStart_toEndOf="@+id/tv_phone_no"
                app:layout_constraintTop_toBottomOf="@+id/tv_email_address_value" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>